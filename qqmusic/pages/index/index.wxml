<view>
  <swiper
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular="{{circular}}"
  >
    <block wx:for="{{swiperImg}}">
      <swiper-item>
        <image src="{{item}}" mode='widthFix' />
      </swiper-item>
    </block>
  </swiper>
</view>