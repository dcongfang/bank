/* miniprogram/pages/search/search.wxss */
page {
    width: 100%;
    height: 100%;
}
.search-container {
    /* padding: 10rpx; */
    width: 100%;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 100rpx; 
}
.search-input {
    width: 600rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    padding: 15rpx 15rpx; 
    box-sizing: border-box;
    margin-left: 20rpx;
    /* justify-content: left; */
    background-color: #e6e6e6;
}
.icon1 {
    width: 34rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.search-input input {
    display: flex;
    width: 512rpx;
    margin-left: 20rpx;
    align-items: center;
    justify-content: center;
    font-size:30rpx;
}
.icon2 {
    width: 34rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.content {
    font-size: 30rpx;
    width: 130rpx;
    height: 50rpx;
    line-height:50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.border{
    margin-top: 30rpx;
    width: 95%;
    align-items: center;
}
.content1 {
    margin-top: 10rpx;
    margin-left: 10rpx;
}
.Lists{
    margin-top: 40rpx;
    width: 100%;
    height: 250rpx;
    float: left;
    padding: 10rpx;
    box-sizing: border-box;
}
.Lists .list {
    width: 21%;
    float: left;
    height: 100rpx;
    align-items: center;
    margin-left: 20rpx;
    border-radius: 5rpx;
}
.list button {
    /* width: 100%;
    height: 80rpx; */
    /* border-radius: 5rpx; */
    border: 1rpx solid #fff;
    font-size: 28rpx;
    background-color: #e6e6e6;
}
.content2 {
    margin-top: 20rpx;
    margin-left: 10rpx;
    width: 200rpx;
    overflow: hidden;
}
.icon-text {
    width: 100%;
    height: 60rpx;
    margin-top: 40rpx;
    margin-left: 10rpx;
    align-items: center;
    vertical-align:middle;
    display: inline-block;
}
.icon-text image {
    vertical-align:middle;
    display: inline-block;
}
.icon-text text {
    margin-left: 15rpx;
    display: inline-block;
}
.clear {
    margin-top: 10rpx;
    text-align: center;
    vertical-align:middle;
}
.clear image {
    vertical-align:middle;
}
.clear text {
    margin-left: 20rpx;
    vertical-align:middle;
    display: inline-block;
}